<?xml version="1.0" encoding="utf-8"?>
<button>
	<title>Frame 45Â°</title>
	<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
			width="200" height="200" viewBox="0 0 200 200">
		<defs>
			<filter id="shadowFilter">
				<feGaussianBlur stdDeviation="3" />
			</filter>
		</defs>
		<g id="rotation" transform="rotate(-45,100,100)">
			<image id="image" x="22" y="40" width="156" height="120" opacity="1.0" preserveAspectRatio="xmidymid slice"/>
			<use id="shadow" xlink:href="#rect" x="2" y="2" style="visibility:hidden;fill:none;stroke:#404040;filter:url(#shadowFilter)" />
			<g id="main" stroke="#FFFFFF" fill="none">
				<rect id="rect" x="22" y="40" width="156" height="120" rx="5" ry="5" stroke-width="5"/>
			</g>
		</g>
	</svg>
	<parameters>
		<parameter>
			<title>Image</title>
			<name>href</name>
			<type>image</type>
			<element>image</element>
			<attribute>xlink:href</attribute>
		</parameter>
		<parameter>
			<title>Image opacity</title>
			<name>opacity</name>
			<type>percent</type>
			<element>image</element>
			<attribute>opacity</attribute>
		</parameter>
		<parameter>
			<title>Rotation</title>
			<name>rotation</name>
			<type>integer(-180,180)</type>
			<element>rotation</element>
			<attribute>transform#1</attribute>
		</parameter>
		<parameter>
			<title>Rx</title>
			<name>rx</name>
			<type>integer</type>
			<element>rect</element>
			<attribute>rx</attribute>
		</parameter>
		<parameter>
			<title>Ry</title>
			<name>ry</name>
			<type>integer</type>
			<element>rect</element>
			<attribute>ry</attribute>
		</parameter>
		<parameter>
			<title>Border width</title>
			<name>stroke-width</name>
			<type>integer</type>
			<element>rect</element>
			<attribute>stroke-width</attribute>
		</parameter>
		<parameter>
			<title>Shadow</title>
			<name>shadow</name>
			<type>shadow</type>
			<element>shadow</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Border colour</title>
			<name>stroke</name>
			<type>colour</type>
			<element>main</element>
			<attribute>stroke</attribute>
			<changeable/>
			<default-value>
				<highlighted>#0000FF</highlighted>
				<selected>#FF0000</selected>
			</default-value>
		</parameter>
		<parameter>
			<title>Inner colour</title>
			<name>fill</name>
			<type>colour</type>
			<element>main</element>
			<attribute>fill</attribute>
			<changeable/>
			<default-value>
				<highlighted>none</highlighted>
				<selected>none</selected>
			</default-value>
		</parameter>
	</parameters>
	<init-parameter>href</init-parameter>
	<default-size>
		<width>200</width>
		<height>200</height>
	</default-size>
	<min-size>
		<width>8</width>
		<height>8</height>
	</min-size>
</button>
