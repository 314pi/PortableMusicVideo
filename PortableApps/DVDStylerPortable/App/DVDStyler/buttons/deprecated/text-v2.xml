<?xml version="1.0" encoding="utf-8"?>
<button>
  <title>Text</title>
  <svg width="8" height="8">
	<rect id="background" x="0" y="0" width="100%" height="100%" rx="5" ry="5" fill="none"/>
    <text id="text" x="50%" y="50%" style="font-size:26;font-style:normal;font-weight:normal;"
          text-anchor="middle" dominant-baseline="middle" fill="#FFFFFF">button</text>
  </svg>
  <parameters>
    <parameter>
      <title>Label</title>
      <name>text</name>
      <type>text</type>
      <element>text</element>
    </parameter>
	<parameter>
      <title>Text colour</title>
      <name>text_fill</name>
      <type>colour</type>
      <element>text</element>
	  <attribute>fill</attribute>
	  <changeable/>
	  <default-value>
	     <highlighted>#0000FF</highlighted>
		 <selected>#FF0000</selected>
	  </default-value>
    </parameter>
	<parameter>
      <title>Background colour</title>
      <name>bgFill</name>
      <type>colour</type>
      <element>background</element>
	  <attribute>fill</attribute>
    </parameter>
    <parameter>
      <title>Rx</title>
      <name>rx</name>
      <type>integer</type>
      <element>background</element>
	  <attribute>rx</attribute>
    </parameter>
    <parameter>
      <title>Ry</title>
      <name>ry</name>
      <type>integer</type>
      <element>background</element>
	  <attribute>ry</attribute>
    </parameter>
  </parameters>
  <init-parameter>text</init-parameter>
  <default-size>
    <width>8|text+8</width>
    <height>8|text+8</height>
  </default-size>
  <min-size>
    <width>8|text</width>
    <height>8|text</height>
  </min-size>
</button>
