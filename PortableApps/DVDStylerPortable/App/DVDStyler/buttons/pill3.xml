<?xml version="1.0" encoding="utf-8"?>
	<!-- Created by Gustavo Rezende -->
<button>
	<title>Pill 3</title>
	<svg width="200" height="50">
		<defs>
			<linearGradient id="gradient1" x1=".5" y1="0" x2=".5" y2="1">
				<stop id="st1" offset="0%" stop-color="#000000" stop-opacity=".5" />
				<stop id="st2" offset="30%" stop-color="#ffffff" stop-opacity=".5" />
				<stop id="st3" offset="100%" stop-color="#000000" stop-opacity=".5" />
			</linearGradient>
		</defs>
		<rect id="box1" x="1%" y="1%" rx="10" ry="10" width="98%" height="98%"
			fill="#ff8000" stroke="#000000" stroke-width="2" />
		<rect id="box2" x="1%" y="1%" rx="10" ry="10" width="98%" height="98%"
			fill="url(#gradient1)" />
		<text style="text-anchor:middle;dominant-baseline:middle;fill:#000000;stroke:#000000;stroke-width:1;stroke-opacity:.8"
			id="text" x="50%" y="50%">Text</text>
	</svg>
	<parameters>
		<parameter>
			<title>Button color</title>
			<name>bc</name>
			<type>colour</type>
			<element>box1</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Text</title>
			<name>tx</name>
			<type>text</type>
			<element>text</element>
		</parameter>
		<parameter>
			<title>Text color</title>
			<name>tc</name>
			<type>colour</type>
			<element>text</element>
			<attribute>fill</attribute>
			<changeable />
			<default-value>
				<highlighted>#ff0000</highlighted>
				<selected>#ffffff</selected>
			</default-value>
		</parameter>
	</parameters>
	<text-offset>6%</text-offset>
	<default-size>
		<width>150|text+12%</width>
		<height>35|text</height>
	</default-size>
	<min-size>
		<width>10|text+12%</width>
		<height>10|text</height>
	</min-size>
</button>
