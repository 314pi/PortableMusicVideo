<?xml version="1.0" standalone="no"?>
<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN" "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">
<svg xmlns="http://www.w3.org/2000/svg" version="1.1">
	<title>Wipe top to bottom</title>
	<defs>
		<linearGradient id="gradient1" x1="0" y1="0" x2="0" y2="1">
			<stop offset="-0.2" stop-color="white" stop-opacity="0">
				<animate attributeName="offset" from="-0.2" to="1" />
			</stop>
			<stop offset="0" stop-color="white" stop-opacity="1">
				<animate attributeName="offset" from="0" to="1.2" />
			</stop>
		</linearGradient>
		<mask id="mask1">
			<rect x="0%" y="0%" width="100%" height="100%" fill="url(#gradient1)"  />
		</mask>
		<linearGradient id="gradient2" x1="0" y1="0" x2="0" y2="1">
			<stop offset="0" stop-color="white" stop-opacity="1">
				<animate attributeName="offset" from="0" to="1.2" />
			</stop>
			<stop offset="0.1" stop-color="white" stop-opacity="0">
				<animate attributeName="offset" from="0.1" to="1.3" />
			</stop>
		</linearGradient>
		<mask id="mask2">
			<rect x="0%" y="0%" width="100%" height="100%" fill="url(#gradient2)"  />
		</mask>
	</defs>
	<rect width="100%" height="100%" fill="#000000" />
	<image id="image2" width="100%" height="100%" preserveAspectRatio="xmidymid meet" mask="url(#mask2)" />
	<image id="image1" width="100%" height="100%" preserveAspectRatio="xmidymid meet" mask="url(#mask1)" />
</svg>
