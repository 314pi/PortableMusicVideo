<?xml version="1.0" encoding="utf-8"?>
<object>
	<title>Ellipse</title>
	<svg width="80" height="50">
		<defs>
			<filter id="shadowFilter">
				<feGaussianBlur stdDeviation="3" />
			</filter>
		</defs>
		<use id="shadow" xlink:href="#ellipse" x="2" y="2" style="visibility:hidden;fill:none;stroke:#404040;filter:url(#shadowFilter)" />
		<g id="main" stroke="#FFFFFF" fill="#8080EF">
			<ellipse id="ellipse" cx="50%" cy="50%" rx="40%" ry="40%" stroke-width="5" />
		</g>
	</svg>
	<parameters>
		<parameter>
			<title>Outline width</title>
			<name>stroke-width</name>
			<type>integer</type>
			<element>ellipse</element>
			<attribute>stroke-width</attribute>
		</parameter>
		<parameter>
			<title>Outline colour</title>
			<name>stroke</name>
			<type>colour</type>
			<element>main</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Inner colour</title>
			<name>fill</name>
			<type>colour</type>
			<element>main</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Shadow</title>
			<name>shadow</name>
			<type>shadow</type>
			<element>shadow</element>
			<attribute>stroke</attribute>
		</parameter>
	</parameters>
	<min-size>
		<width>8</width>
		<height>8</height>
	</min-size>
</object>
