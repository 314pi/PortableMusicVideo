<?xml version="1.0" encoding="utf-8"?>
<object>
	<title>Frame</title>
	<svg width="100" height="100">
		<defs>
			<filter id="shadowFilter">
				<feGaussianBlur stdDeviation="3" />
			</filter>
		</defs>
		<use id="shadow" xlink:href="#rect" x="2" y="2" style="visibility:hidden;fill:none;stroke:#404040;filter:url(#shadowFilter)" />
		<g id="main" stroke="#FFFFFF" fill="none">
			<rect id="rect" x="10%" y="10%" width="80%" height="80%" rx="5" ry="5" stroke-width="5"/>
		</g>
	</svg>
	<parameters>
		<parameter>
			<title>Rx</title>
			<name>rx</name>
			<type>integer</type>
			<element>rect</element>
			<attribute>rx</attribute>
		</parameter>
		<parameter>
			<title>Ry</title>
			<name>ry</name>
			<type>integer</type>
			<element>rect</element>
			<attribute>ry</attribute>
		</parameter>
		<parameter>
			<title>Outline width</title>
			<name>stroke-width</name>
			<type>integer</type>
			<element>rect</element>
			<attribute>stroke-width</attribute>
		</parameter>
		<parameter>
			<title>Outline colour</title>
			<name>stroke</name>
			<type>colour</type>
			<element>main</element>
			<attribute>stroke</attribute>
		</parameter>
		<parameter>
			<title>Inner colour</title>
			<name>fill</name>
			<type>colour</type>
			<element>main</element>
			<attribute>fill</attribute>
		</parameter>
		<parameter>
			<title>Shadow</title>
			<name>shadow</name>
			<type>shadow</type>
			<element>shadow</element>
			<attribute>stroke</attribute>
		</parameter>
	</parameters>
	<min-size>
		<width>8</width>
		<height>8</height>
	</min-size>
</object>
